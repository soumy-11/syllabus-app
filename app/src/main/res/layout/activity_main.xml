<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B03A9F4"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/csebuttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cse_button"
        android:textSize="45sp"
        android:textStyle="italic"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"

        />

    <Button
        android:id="@+id/eeebuttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eee_button"
        android:textSize="45sp"
        android:textStyle="italic"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"


        />
    <Button
        android:id="@+id/mebuttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_button"
        android:textSize="45sp"
        android:textStyle="italic"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"


        />
    <Button
        android:id="@+id/cebuttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ce_button"
        android:textSize="45sp"
        android:textStyle="italic"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"


        />


</LinearLayout>